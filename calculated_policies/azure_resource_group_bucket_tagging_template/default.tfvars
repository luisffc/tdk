# Required - Tag key to be enforced
tag_key = "<tag key>"
# Examples for tag_key
# tag_key = my-tag

# Required - Default value for the tag to be enforced in case value is empty
tag_default_value = "<default value in case value is empty>"
# Examples for tag_default_value
# tag_default_value = "Unknown"

# Required - Target resource to attach to smart folder
target_resource = "<resource_id or aka>"
# Examples for target_resource
# target_resource = "tmod:@turbot/turbot#/"
# target_resource = "191926035367605"

# Optional - Default value: "Azure Resource Group Tags Template"
# smart_folder_title = "Custom Smart Folder Title"

# Optional - Default value: "Enforce tags defined on template"
# smart_folder_description = "Custom Description"

# Optional - Default value: tmod:@turbot/turbot#/
